<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp" >

    <Button
        android:id="@+id/newReservationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/reservationListView"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/reservationListView"
        android:gravity="center"
        android:text="@string/new_reservation"
        android:background="@drawable/buttonclickdrawable"
        style="@style/ButtonTextStyle" 
        android:layout_marginTop="5dp"/>

    <ListView
        android:id="@+id/reservationListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/newReservationButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:divider="@null"
        android:dividerHeight="10dp"
        android:listSelector="@android:color/transparent"
        android:cacheColorHint="@android:color/transparent"
         >

    </ListView>

</RelativeLayout>
